// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  walletAddress String @unique
  username  String?
  avatar    String?
  rating    Int     @default(0)
  totalDonated Float @default(0)
  totalReceived Float @default(0)
  chances   Int     @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  dreams    Dream[]
  donations Donation[] @relation("DonorDonations")
  
  @@map("users")
}

model Dream {
  id        Int     @id @default(autoincrement())
  userId    Int
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title     String
  description String
  imageUrl  String?
  goal      Float   @default(0)
  totalDonations Float @default(0)
  rating    Float   @default(0)
  status    String  @default("ACTIVE")
  isWithdrawn Boolean @default(false)
  category  String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  donations Donation[] @relation("DreamDonations")
  
  @@map("dreams")
}

model Donation {
  id        Int     @id @default(autoincrement())
  dreamId   Int
  dream     Dream   @relation("DreamDonations", fields: [dreamId], references: [id], onDelete: Cascade)
  
  fromWallet String
  donor     User?   @relation("DonorDonations", fields: [donorId], references: [id], onDelete: SetNull)
  donorId   Int?
  
  amount    Float
  currency  String  @default("ETH")
  txHash    String  @unique
  blockNumber Int?
  
  createdAt DateTime @default(now())
  
  @@map("donations")
}
